document.getElementById("loginForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const login = document.getElementById("login").value.trim();

    // Lista de IDs autorizados
    const idsAutorizados = [
        "123456", "789101", "dgzinho009", "soberano2024" // adicione os IDs que quiser aqui
    ];

    if (idsAutorizados.includes(login)) {
        alert("Acesso liberado!");
        // Redireciona ou executa ação
        window.location.href = "painel.html"; // substitua com o link do painel real
    } else {
        alert("ID não autorizado. Para mais informações, entre em contato pelo Instagram @soberanos.ff");
    }
});
