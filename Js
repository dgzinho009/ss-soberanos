document.getElementById("loginForm").addEventListener("submit", function(event) {
  event.preventDefault();

  const login = document.getElementById("login").value.trim().toUpperCase();

  // IDs permitidos (garanta que estão exatamente iguais aos que você quer)
  const idsAutorizados = ["SSDG001", "LKADM001"]; // pode adicionar mais aqui

  if (idsAutorizados.includes(login)) {
    window.location.href = "painel.html"; // redireciona pro painel
  } else {
    alert("ID inválido. Tente novamente.");
  }
});
